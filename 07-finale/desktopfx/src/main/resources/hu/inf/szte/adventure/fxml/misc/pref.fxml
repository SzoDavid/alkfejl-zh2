        <font>
            <Font name="System Bold" size="20.0"/>
        </font>
    </Label>
    <Slider fx:id="minPriceSlider" layoutX="22.0" layoutY="71.0" max="999.99" prefHeight="40.0" prefWidth="199.0"
            showTickLabels="true" showTickMarks="true" AnchorPane.leftAnchor="24.0" AnchorPane.rightAnchor="130.0"
            AnchorPane.topAnchor="80.0">
        <tooltip>
            <Tooltip text="Minimum price"/>
