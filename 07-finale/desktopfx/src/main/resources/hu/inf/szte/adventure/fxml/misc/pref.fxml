    <Slider fx:id="maxPriceSlider" layoutX="22.0" layoutY="125.0" max="999.99" prefHeight="40.0" prefWidth="199.0"
            showTickLabels="true" showTickMarks="true" AnchorPane.leftAnchor="24.0" AnchorPane.rightAnchor="130.0"
            AnchorPane.topAnchor="120.0">
        <tooltip>
            <Tooltip text="Maximum price"/>
        </tooltip>
    </Slider>
    <Slider fx:id="minPopularitySlider" blockIncrement="1" layoutX="22.0" layoutY="176.0" majorTickUnit="1" max="10"
