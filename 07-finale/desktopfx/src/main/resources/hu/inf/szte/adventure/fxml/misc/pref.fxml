            snapToTicks="true" AnchorPane.leftAnchor="24.0" AnchorPane.rightAnchor="130.0" AnchorPane.topAnchor="160.0">
        <tooltip>
            <Tooltip text="Minimum popularity"/>
        </tooltip>
    </Slider>
    <Spinner fx:id="minPriceSpinner" editable="true" layoutX="228.0" layoutY="80.0" prefHeight="26.0" prefWidth="94.0"
