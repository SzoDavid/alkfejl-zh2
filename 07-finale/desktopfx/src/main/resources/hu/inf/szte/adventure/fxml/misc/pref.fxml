    <Spinner fx:id="maxPriceSpinner" editable="true" layoutX="228.0" layoutY="120.0" prefHeight="26.0" prefWidth="94.0"
             AnchorPane.rightAnchor="24.0" AnchorPane.topAnchor="120.0"/>
    <Spinner fx:id="minPopularitySpinner" editable="true" layoutX="228.0" layoutY="160.0" prefHeight="26.0"
             prefWidth="94.0" AnchorPane.rightAnchor="24.0" AnchorPane.topAnchor="160.0"/>

    <Button layoutX="139.0" layoutY="218.0" mnemonicParsing="false" onAction="#onApply" text="Apply"
            AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0"/>
    <Button layoutX="14.0" layoutY="219.0" mnemonicParsing="false" onAction="#onReset" text="Reset"
            AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"/>
</AnchorPane>
