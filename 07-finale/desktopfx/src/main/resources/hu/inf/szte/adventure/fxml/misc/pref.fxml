            xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.inf.szte.adventure.controller.PreferenceController">
    <Label alignment="CENTER" layoutX="83.0" layoutY="22.0" text="Preferences" textAlignment="CENTER"
